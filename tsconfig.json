{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
  },
  "paths": {
    "@App/*": [
      "src/*"
    ],
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
